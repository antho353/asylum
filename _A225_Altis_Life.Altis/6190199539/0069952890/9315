};if!(randomized_life_group_list findIf{_groupName in _x}isEqualTo-1) exitWith{["That group name is already taken!","basic"]spawn life_fnc_handleMessage;};private _group=createGroup civilian;private _left=_groupName select[0,1];private _mid=_groupName select[floor((count _groupName)/2),1];private _right=_groupName select[((count _groupName)-1),1];private _grpTag=format["%1%2%3",_left,_mid,_right];private _countGroupTags={(((_x select 1) getVariable["ga_grpTag",""]) find _grpTag)>=0}count randomized_life_group_list;private _grpTag=if(_countGroupTags>=1) then{format["[%1 (%2)] ",_grpTag,(_countGroupTags+1)]}else{format["[%1] ",_grpTag]};_group setVariable["ga_grpTag",_grpTag,true];randomized_life_group_list pushBack[_groupName,_group,true,getPlayerUID player,_groupPassword];publicVariable"randomized_life_group_list";[player]joinSilent _group;player setRank"COLONEL";life_my_gang=_group;if!(isNull life_my_gang) then{["groupMenuMain"]spawn life_fnc_createDialog;publicVariable"randomized_life_group_list";};