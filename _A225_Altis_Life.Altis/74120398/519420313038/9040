!(isNil{_building getVariable"ga_house_gang"})};private _gangID=_building getVariable["ga_house_gang",-1];private _gangOwner=_building getVariable["ga_homeOwner",""];private _houseTypes=["getHouses"]call life_fnc_houseConfig;if(_gangID isEqualTo-1||_gangOwner isEqualTo"") exitWith{};if!((typeOf _building) in _houseTypes) exitWith{};life_gangBuilding=[_building,getPosATL _building];if(_gangOwner isEqualTo(getPlayerUID player)) exitWith{};private _marker=createMarkerLocal[format["phouse_%1%2",_gangID,_gangOwner],getPosATL _building];_marker setMarkerTextLocal"Gang Building";_marker setMarkerColorLocal"ColorGreen";_marker setMarkerTypeLocal"mil_end";life_gangBldgMark=_marker;};};};private _units=(units group player) apply{getPlayerUID _x};[["-GANGGRP-",player,profileName,format["joined the gang group: %1(%3). Members: %2",life_gang_data select 1,_units,life_gang_data select 0]],"TON_fnc_logIt",2]call life_fnc_MP;