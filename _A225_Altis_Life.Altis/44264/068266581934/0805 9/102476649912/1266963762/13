private _qtyInInventory=missionNameSpace getVariable[format["life_inv_%1",_item],0];private _color=[1,1,1,0.3];switch(true) do{case(_canOnlyBeSold):{if(_qtyInInventory isEqualTo 0) then{_mainItemList lnbDeleteRow _mainItemListSelect;_mainItemListSellButton ctrlEnable false;}else{private _invText=format["%1",_qtyInInventory];_mainItemList lnbSetValue[[_mainItemListSelect,2],_qtyInInventory];_mainItemList lnbSetText[[_mainItemListSelect,2],_invText];_mainItemListSellButton ctrlEnable true;};};case(_canBeSoldAndBought):{private _invText=format["%1",_qtyInInventory];_mainItemList lnbSetValue[[_mainItemListSelect,2],_qtyInInventory];_mainItemList lnbSetText[[_mainItemListSelect,2],_invText];if(_qtyInInventory isEqualTo 0) then{_mainItemListSellButton ctrlEnable false;}else{_mainItemListBuyButton ctrlEnable true;_mainItemListSellButton ctrlEnable true;};if(_isDomination) then{_color set[3,1];}else{if(_shopType in["rebel"]) then{if(life_cash>=_price) then{_color set[3,1]};};if(((life_cash>=_price)||((life_atmcash>=_price)&&(life_inv_debitcard>=1)))&&!(_shopType in["rebel"])) then{_color set[3,1]};for"_columnIndex"from 0 to 1 do{_mainItemList lnbSetColor[[_mainItemListSelect,_columnIndex],_color]};};};case(_canOnlyBeBought):{private _invText=format["%1",_qtyInInventory];_mainItemList lnbSetValue[[_mainItemListSelect,2],_qtyInInventory];_mainItemList lnbSetText[[_mainItemListSelect,2],_invText];if(_isDomination) then{_color set[3,1];}else{if(_shopType in["rebel"]) then{if(life_cash>=_price) then{_color set[3,1]};};if(((life_cash>=_price)||((life_atmcash>=_price)&&(life_inv_debitcard>=1)))&&!(_shopType in["rebel"])) then{_color set[3,1]};for"_columnIndex"from 0 to 1 do{_mainItemList lnbSetColor[[_mainItemListSelect,_columnIndex],_color]};};_mainItemListBuyButton ctrlEnable true;};};