};private _lightLeft="#lightpoint"createVehicleLocal getPos _vehicle;uiSleep 0.2;_lightLeft setLightColor _lightRed;_lightLeft setLightBrightness 0.2;_lightLeft setLightAmbient[0.1,0.1,1];_lightLeft lightAttachObject[_vehicle,_leftOffset];_lightLeft setLightAttenuation[0.14,0,1000,20];_lightLeft setLightIntensity 2;_lightLeft setLightFlareSize 0.3;_lightLeft setLightFlareMaxDistance 200;_lightLeft setLightUseFlare true;private _lightRight="#lightpoint"createVehicleLocal getPos _vehicle;uiSleep 0.2;_lightRight setLightColor _lightWhite;_lightRight setLightBrightness 0.2;_lightRight setLightAmbient[0.1,0.1,1];_lightRight lightAttachObject[_vehicle,_rightOffset];_lightRight setLightAttenuation[0.14,0,1000,20];_lightRight setLightIntensity 2;_lightRight setLightFlareSize 0.3;_lightRight setLightFlareMaxDistance 200;_lightRight setLightUseFlare true;_lightLeft setLightDayLight true;_lightRight setLightDayLight true;private _brightness=0;private _leftRed=true;while{alive _vehicle}do{if!(_vehicle getVariable"ga_lights") exitWith{};_brightness=switch(true) do{case(dayTime>6&&dayTime<=17.5):{35};case(dayTime>=5.25&&dayTime<=6):{5};case(dayTime>17.5&&dayTime<=18.5):{10};default{2.5};};if(_leftRed) then{_lightRight setLightBrightness 0.0;_lightLeft setLightBrightness _brightness;}else{_lightLeft setLightBrightness 0.0;_lightRight setLightBrightness _brightness;};_leftRed=!_leftRed;uiSleep _lightTime;};deleteVehicle _lightLeft;deleteVehicle _lightRight;