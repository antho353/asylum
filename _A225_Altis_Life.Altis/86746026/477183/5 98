private _groupName=ctrlText 2531;private _length=count(toArray _groupName);if(_groupName isEqualTo"") exitWith{["You must choose a name.","basic"]spawn life_fnc_handleMessage;};if(_length<3) exitWith{["The minimum character limit for a group name is 3.","basic"]spawn life_fnc_handleMessage;};if(_length>25) exitWith{["The maximum character limit for a group name is 25.","basic"]spawn life_fnc_handleMessage;};if!([_groupName]call life_fnc_isAlphanumeric) exitWith{["Invalid character in name, characters allowed are A-z,0-9, and _","basic"]spawn life_fnc_handleMessage;};private _groupPassword=ctrlText 2532;if(_groupPassword isEqualTo"") exitWith{["You must choose a password for the group.","basic"]spawn life_fnc_handleMessage};if(_length>16) exitWith{["The maximum character limit for a password is 16.","basic"]spawn life_fnc_handleMessage;};if!([_groupPassword]call life_fnc_isAlphanumeric) exitWith{["Invalid character in password, characters allowed are A-z,0-9, and _","basic"]spawn life_fnc_handleMessage;};if(isNil{randomized_life_group_list}) exitWith{["Server failed to initiate groups and gangs list.","basic"]spawn life_fnc_handleMessage;