}else{if(_specialityID in _playerSpecialitysUnlocked) then{format["%1<t color='#00FF00' size='0.7' align='center' >You have learned this speciality.</t><br/>",_label];}else{if(_prerequisiteSpecialityID>0) then{if!(_prerequisiteSpecialityID in _playerSpecialitysUnlocked) then{format["%1<t color='#FF0000' align='center' size='0.7' >You must learn %2 before you can learn this</t><br/>",_label,_title];}else{format["%1<t size='0.7' align='center' >You have not yet learned this speciality, but you do meet its requirements</t><br/>",_label];};}else{format["%1<t size='0.7' align='center' >You have not yet learned this speciality</t><br/>",_label];};};};if(_prerequisiteSpecialityID>0&&!(_prerequisiteSpecialityID in _playerSpecialitysUnlocked)) then{_specialityButton ctrlEnable false;};if(_prerequisiteSpecialityID>0&&!(_specialityID in _playerSpecialitysUnlocked)) then{_specialityRequiredPointsTitle ctrlSetStructuredText parseText format["<t size='0.70' align='center'>Required: %1</t>",_amount];}else{_specialityRequiredPointsTitle ctrlSetStructuredText parseText"<t size='0.70' align='center'>Already unlocked!</t>";};_label=format["%1%2",_label,format["<t size='0.6'align='center' >%1</t>",_description]];_specialityInfoText ctrlSetStructuredText parseText _label;if!(_specialityID in _playerSpecialitysUnlocked) then{_specialityButton ctrlSetText"Learn"}else{_specialityButton ctrlSetText"Unlearn"};