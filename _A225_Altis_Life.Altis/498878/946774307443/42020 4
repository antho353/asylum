for"_i"from 0 to 5 do{deleteMarkerLocal format["bounty_%1",_i];deleteMarkerLocal format["bounty_dot_%1",_i];};for"_q"from 0 to(count life_bounty_list-1) do{(life_bounty_list select _q) params["_PID","_name","_trackedTime","_markerCenter"];private _marker=createMarkerLocal[format["bounty_%1",_q],_markerCenter];_marker setMarkerShapeLocal"ELLIPSE";_marker setMarkerSizeLocal[life_track_radius,life_track_radius];_marker setMarkerTypeLocal"mil_dot";_marker setMarkerBrushLocal"DiagGrid";_marker setMarkerColorLocal"ColorRed";_marker setMarkerTextLocal format["Fugitive %1",_name];private _marker2=createMarkerLocal[format["bounty_dot_%1",_q],_markerCenter];_marker2 setMarkerShapeLocal"ICON";_marker2 setMarkerTypeLocal"mil_dot";_marker2 setMarkerColorLocal"ColorRed";_marker2 setMarkerTextLocal format["Fugitive %1",_name];};private _bounties=player getVariable["ga_myBounties",[]];if!((_bounties findIf{_bountyUID in _x}) isEqualTo-1) then{_bounties deleteAt(_bounties findIf{_bountyUID in _x});player setVariable["ga_myBounties",_bounties,true];};[]call life_fnc_hudUpdate;if(life_bounty_list isEqualTo[]) then{if(player getVariable["ga_activeBounty",false]) then{player setVariable["ga_activeBounty",nil,true];};};