};};if(_type isEqualTo"Field") then{private _near=nearestObjects[getPos _unit,["Car","Air","Ship"],30];private _nearVehicle=_near param[_near findIf{_x getVariable["ga_side",""]isEqualTo"cop"},objNull];if(isNull _nearVehicle) exitWith{["There aren't any nearby Police vehicles to seize this player's gear into!","basic"]spawn life_fnc_handleMessage;};if!(alive _nearVehicle) exitWith{["You cannot store items in a vehicle which has been destroyed!","basic"]spawn life_fnc_handleMessage;};if(isPlayer _unit) then{[[_nearVehicle],"life_fnc_seizeToVehicle",_unit]spawn life_fnc_MP;titleText[format["You have seized %1's illegal items into the nearest vehicle. The items can be placed into evidence from any Police HQ.",name _unit],"PLAIN"];}else{titleText["Unable to seize illegal items. Please try again.","PLAIN"];};};