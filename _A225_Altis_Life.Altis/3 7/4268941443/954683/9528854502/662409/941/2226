if!(currentWeapon player isEqualTo"") exitWith{["You must holster your weapon before picking this up.","basic"]spawn life_fnc_handleMessage};_barrel attachTo[player,[0,1,1]];player forceWalk true;life_holding_barrel=_barrel;[_barrel]spawn{params["_barrel"];while{uiSleep 0.2;true}do{if!(alive player) exitWith{};if!(currentWeapon player isEqualTo"") exitWith{};if!(isNull objectParent player) then{player action["Eject",vehicle player]};if(isNull life_holding_barrel) exitWith{};if!(isNull((player getVariable["ga_escortee",[objNull,false]]) select 0)) exitWith{};};if!(isNull life_holding_barrel) exitWith{[]call life_fnc_dropOil};};