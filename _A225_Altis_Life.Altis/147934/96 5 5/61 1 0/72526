class FSM{fsmName="Life Client FSM";class States{class Main_Init{name="Main_Init";init="private[""_lastcheck"",""_food"",""_water"",""_lastsync""];"\n"_lastcheck = time;"\n"_food = time;"\n"_water = time;"\n"_lastsync = time;";precondition="";class Links{class true{priority=0.000000;to="Split";precondition="";condition="true";action="";};};};class Split{name="Split";init="systemChat format[""You will receive your next paycheck in %1 minutes"",(call life_paycheck_period)];";precondition="";class Links{class Time_to_pay_{priority=0.000000;to="Pay_me_";precondition="";condition="(time - _lastcheck) > ((call life_paycheck_period) * 60)";action="";};};};class Pay_me_{name="Pay_me_";init="if (!alive player) then"\n"{"\n"	systemChat ""You have missed a paycheck because you were dead."";"\n"}"\n"	else"\n"{"\n"	if (player distance (getMarkerPos ""fed_reserve"") < 120 && playerSide isEqualTo west) then"\n"	{"\n"		systemChat format[""You have received a paycheck of $%1"",[(call life_paycheck) + 1500] call life_fnc_numberText];"\n"		life_atmcash = life_atmcash + (call life_paycheck) + 1500;"\n"    life_atmcashCache = ((life_atmcash / 4) + 5);"\n"	}"\n"		else"\n"	{"\n"		life_atmcash = life_atmcash + (call life_paycheck);"\n"    life_atmcashCache = ((life_atmcash / 4) + 5);"\n"		systemChat format[""You have received a paycheck of $%1"",[(call life_paycheck)] call life_fnc_numberText];"\n"	};"\n"};"\n""\n"_lastcheck = time;";