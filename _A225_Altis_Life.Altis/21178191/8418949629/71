private _hour=date select 3;private _min=date select 4;if(_hour<10) then{_hour=format["0%1",_hour];};if(_min<10) then{_min=format["0%1",_min];};private _ttr=if(isNil"serverStartTime") then{round((14400-serverTime)/60)}else{round((serverCycleLength-(serverTime-serverStartTime))/60)};private _textLeft=format["$%1 %2",[life_cash]call life_fnc_numberText,_talentAlert];private _textCenter=format["%1:%2 [%3 mins]",_hour,_min,_ttr];private _textRight=format["%1/%2",life_carryWeight,life_maxWeight];_statusLeft ctrlSetStructuredText parseText("<t align='left' shadow='0' size='0.7'>"+_textLeft+"</t>");_statusCenter ctrlSetStructuredText parseText("<t align='center' shadow='0' size='0.7'>"+"   "+_textCenter+"</t>");_statusRight ctrlSetStructuredText parseText("<t align='right' shadow='0' size='0.7'>"+_textRight+"</t>");if(!ctrlShown _statusLeft) then{{_x ctrlShow true;_x ctrlSetFade 0;_x ctrlCommit 0}forEach[_statusLeft,_statusCenter,_statusRight]};uiSleep 1;};